# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# AWS Cognito Configuration (Get from setup_cognito.sh output)
COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
COGNITO_CLIENT_ID=XXXXXXXXXXXXXXXXXXXXXXXXXX
COGNITO_REGION=us-east-1

# Development Mode (set to false for production Cognito)
DEVELOPMENT_MODE=false
COGNITO_CLIENT_SECRET=your_client_secret_if_needed

# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Security Configuration
JWT_SECRET_KEY=your_jwt_secret_key_for_development
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=1

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
SESSION_WARNING_MINUTES=5
AUTO_REFRESH_THRESHOLD_MINUTES=10

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:4200,http://localhost:3000

# Database Configuration
DEFAULT_DATABASE=valuation_app_prod
ADMIN_DATABASE=valuation_admin
CONFIG_DATABASE=val_app_config

# File Upload Configuration
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Cache Configuration
REDIS_URL=redis://localhost:6379/0