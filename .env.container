# Container Environment Configuration
# Copy this file to .env and update the values for your environment

# Database Configuration
MONGODB_URI=mongodb://admin:password@mongodb:27017/valuation_app?authSource=admin
DATABASE_URL=mongodb://admin:password@mongodb:27017/valuation_app?authSource=admin

# MongoDB Atlas (if using cloud database instead of local MongoDB)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/valuation_app

# Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# Application Settings
DEBUG=false
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=http://localhost,http://localhost:80

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,docx

# Local MongoDB Settings (if using docker mongodb)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password
MONGO_DB_NAME=valuation_app

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Logging
LOG_LEVEL=INFO

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# API Keys (if needed)
MAPS_API_KEY=your-maps-api-key

# Production Settings
ENVIRONMENT=production