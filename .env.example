# MongoDB Atlas Configuration for Valuation Application
# Copy this file to .env and update with your actual values

# =============================================================================
# MongoDB Atlas Configuration
# =============================================================================

# MongoDB Atlas Connection String
# Format: mongodb+srv://<username>:<password>@<cluster-url>/<database>?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://app_user:YOUR_PASSWORD_HERE@valuationapp-xxxxx.mongodb.net/valuation_app_prod?retryWrites=true&w=majority

# Database Name
MONGODB_DB_NAME=valuation_app_prod

# MongoDB Atlas Cluster Details
MONGODB_CLUSTER_NAME=ValuationApp-Production
MONGODB_REGION=AP-SOUTH-1

# =============================================================================
# Application Configuration
# =============================================================================

# Environment (development, production, staging)
NODE_ENV=development

# Application Port
PORT=8000

# Base URL for your application
BASE_URL=http://localhost:8000

# =============================================================================
# Authentication & Security
# =============================================================================

# JWT Secret Key (Generate a strong random key)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-for-security

# JWT Token Expiration
JWT_EXPIRE_IN=24h

# BCrypt Rounds for Password Hashing
BCRYPT_ROUNDS=12

# Session Secret
SESSION_SECRET=your-session-secret-key-here

# =============================================================================
# File Upload Configuration
# =============================================================================

# Maximum file size in bytes (10MB = 10485760)
MAX_FILE_SIZE=10485760

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# File storage location (GridFS bucket name)
GRIDFS_BUCKET_NAME=valuation_files

# =============================================================================
# Email Configuration (for notifications)
# =============================================================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email Templates
EMAIL_FROM=noreply@valuationapp.com
EMAIL_FROM_NAME=Valuation App

# =============================================================================
# External API Configuration
# =============================================================================

# Google Maps API (for property location validation)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# SMS Service (for OTP/notifications)
SMS_API_KEY=your-sms-service-api-key
SMS_API_URL=https://api.smsservice.com/send

# =============================================================================
# Logging Configuration
# =============================================================================

# Log Level (debug, info, warn, error)
LOG_LEVEL=info

# Log File Path
LOG_FILE_PATH=./logs/app.log

# =============================================================================
# Rate Limiting
# =============================================================================

# API Rate Limit (requests per minute)
RATE_LIMIT_PER_MINUTE=100

# =============================================================================
# Development Configuration
# =============================================================================

# Debug Mode
DEBUG=true

# CORS Origins (comma-separated for production)
CORS_ORIGINS=http://localhost:3000

# =============================================================================
# MongoDB Atlas Setup Instructions
# =============================================================================

# 1. Go to https://cloud.mongodb.com
# 2. Create a new cluster (M0 for free tier, M10+ for production)
# 3. Create a database user with read/write permissions
# 4. Whitelist your IP address (0.0.0.0/0 for development)
# 5. Get your connection string and update MONGODB_URI above
# 6. Run the setup script: python scripts/setup_mongodb_atlas.py

# =============================================================================
# Security Notes
# =============================================================================

# - Never commit this file with real credentials to version control
# - Use strong passwords for database users
# - Restrict IP access in production
# - Use environment-specific configuration files
# - Enable MongoDB Atlas monitoring and alerts
# - Regularly rotate secrets and API keys
JWT_EXPIRATION_HOURS=24

# API Configuration
API_BASE_URL=http://localhost:8000/api
REACT_APP_URL=http://localhost:3000
BLAZOR_APP_URL=https://localhost:5000

# Development Settings
ENVIRONMENT=development
DEBUG_MODE=true
LOG_LEVEL=debug

# External APIs (if any)
EXTERNAL_API_KEY=your-external-api-key
EXTERNAL_API_URL=https://api.example.com

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# File Upload Settings
MAX_FILE_SIZE_MB=10
UPLOAD_DIRECTORY=./uploads
ALLOWED_FILE_EXTENSIONS=.pdf,.jpg,.jpeg,.png,.doc,.docx